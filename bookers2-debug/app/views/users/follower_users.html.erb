<h1>Follower Users</h1><table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>follows</th>
      <th>followers</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @follower_users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
      <td><%= user.name %></td>
      <td><%= user.follower.count %></td>
      <td><%= user.followed.count %></td>
      <td>
        <% if current_user.following?(user) %>
          <%= link_to 'unfollow', unfollow_path(user.id), method: :POST %>
        <% else %>
          <%= link_to 'follow', follow_path(user.id), method: :POST %>
        <% end %>
      </td>
      <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
    </tr>
  <% end %>
  </tbody>