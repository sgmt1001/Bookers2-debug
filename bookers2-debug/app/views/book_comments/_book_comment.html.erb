 <% book.book_comments.each do |book_comment| %>
        <div>
          <spap><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br><%= link_to book_comment.user.name, user_path(book_comment.user) %></span>
          <span><%= book_comment.book_comment %></span>
          <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-danger btn btn-sm ",remote: true %>
          <% end %>
        </div>
      <% end %>
